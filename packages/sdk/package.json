{
  "name": "@pact/sdk",
  "version": "0.1.0",
  "description": "Pact SDK - Agent negotiation protocol library",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "build": "pnpm exec tsup --config tsup.config.ts",
    "postbuild": "cp src/policy/schema.json dist/schema.json",
    "test": "pnpm -w exec vitest run -r packages/sdk",
    "test:watch": "pnpm -w exec vitest -r packages/sdk",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@pact/passport": "workspace:*",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "bs58": "^5.0.0",
    "ethers": "^6.0.0",
    "minimist": "^1.2.8",
    "tweetnacl": "^1.0.3",
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "stripe": "^14.0.0",
    "snarkjs": "^0.7.0"
  },
  "peerDependenciesMeta": {
    "stripe": {
      "optional": true
    },
    "snarkjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/bs58": "^5.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.6",
    "tsup": "^8.5.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.1"
  },
  "publishConfig": {
    "access": "public"
  }
}