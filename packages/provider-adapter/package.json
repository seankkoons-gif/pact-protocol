{
  "name": "@pact/provider-adapter",
  "version": "0.1.0",
  "type": "module",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm exec tsup",
    "test": "pnpm -w exec vitest run -r packages/provider-adapter",
    "start": "tsx src/server.ts",
    "registry:register": "tsx src/cli.ts register",
    "registry:list": "tsx src/cli.ts list"
  },
  "dependencies": {
    "@pact/sdk": "workspace:*",
    "bs58": "^5.0.0",
    "minimist": "^1.2.8",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.5",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.x",
    "vitest": "^1.6.1"
  },
  "bin": {
    "pact-provider": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  }
}
